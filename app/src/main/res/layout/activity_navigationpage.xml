<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <Button
                android:id="@+id/dis_btn_back"
                android:background="@drawable/shape_back"
                android:textColor="#000000"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Back"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="2dp">

                <Button
                    android:id="@+id/dis_btn_start"
                    android:layout_width="143dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_rescan"
                    android:text="Rescaning"
                    android:textColor="#000000"
                    android:textSize="16dp"></Button>
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/dis_roomnow"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:text=""
            android:textColor="#F5000000"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/dis_map"
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/dis_route"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#5eaaa8"
            android:gravity="center"
            android:text=""
            android:textColor="#F0FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

